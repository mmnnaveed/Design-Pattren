{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./lib",
      "esModuleInterop": true,
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "lib",
      "node_modules"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noImplicitAny": true,
  }